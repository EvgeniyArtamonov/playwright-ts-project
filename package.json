{
  "name": "playwright-livecoding-task",
  "version": "1.0.0",
  "description": "Playwright TypeScript live coding assignment",
  "private": true,
  "scripts": {
    "setup": "npm install && npx playwright install",
    "play:test": "playwright test",
    "play:headed": "playwright test --headed",
    "play:debug": "playwright test --debug",
    "report": "playwright show-report",
    "test-s": "playwright test -g @sorting",
    "test-l": "playwright test -g @login",
    "test-c": "playwright test -g @cart"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@playwright/test": "^1.39.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "typescript": "^5.4.5"
  }
}
